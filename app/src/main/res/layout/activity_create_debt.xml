<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:floatlabel="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:context="se.jrp.deptapp.CreateDebtActivity"   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_header"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingTop="16dp"
                android:background="@color/accent_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/create_header_content"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:paddingLeft="@dimen/create_start_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.micromobs.android.floatlabel.FloatLabelAutoCompleteTextView
                            android:id="@+id/create_float_label_name"
                            android:textColorHint="@color/gray_oncolor_very_light"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            floatlabel:fitScreenWidth="full"
                            floatlabel:hint="@string/person_hint"
                            floatlabel:textSize="22dp"
                            floatlabel:textColorHintFocused="@color/gray_oncolor_very_light"
                            floatlabel:textColorHintUnFocused="@color/gray_oncolor_very_light"   />

                        <ImageButton
                            android:id="@+id/create_clear"
                            android:contentDescription="@string/clear"
                            android:background="@drawable/flat_white_selector"
                            android:src="@drawable/ic_clear"
                            android:layout_marginBottom="4dp"
                            android:layout_marginRight="2dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:paddingLeft="@dimen/create_start_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioGroup
                            android:id="@+id/create_radio"
                            android:layout_marginRight="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/create_radio_they_owe"
                                android:textSize="19dp"
                                android:checked="true"
                                android:textColor="@android:color/white"
                                android:text="@string/they_owe"
                                android:layout_width="match_parent"
                                android:layout_height="36dp" />

                            <RadioButton
                                android:id="@+id/create_radio_i_owe"
                                android:textSize="19dp"
                                android:textColor="@android:color/white"
                                android:text="@string/i_owe"
                                android:layout_width="match_parent"
                                android:layout_height="36dp" />

                        </RadioGroup>

                        <com.micromobs.android.floatlabel.FloatLabelEditText
                            android:id="@+id/create_float_label_amount"
                            android:layout_toRightOf="@id/create_radio"
                            android:textColorHint="@color/gray_oncolor_very_light"
                            android:textColor="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            floatlabel:fitScreenWidth="full"
                            floatlabel:hint="@string/amount"
                            floatlabel:textSize="18dp"
                            floatlabel:textColorHintFocused="@color/gray_oncolor_very_light"
                            floatlabel:textColorHintUnFocused="@color/gray_oncolor_very_light"   />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"    />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/create_header_shadow"
                android:contentDescription="@string/gradient_content_description"
                android:src="@drawable/feed_image_bottom_shadow"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        </LinearLayout>

        <com.johnsimon.payback.FloatingActionButton
            android:layout_marginTop="172dp"
            android:layout_alignParentRight="true"
            android:id="@+id/create_fab"
            android:layout_marginEnd="@dimen/fab_create_right_margin"
            android:layout_marginRight="@dimen/fab_create_right_margin"
            android:layout_width="@dimen/fab_size"
            android:layout_height="@dimen/fab_size"/>

        <LinearLayout
            android:paddingLeft="@dimen/create_start_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="18dp"
            android:layout_below="@id/create_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.micromobs.android.floatlabel.FloatLabelEditTextDark
                android:id="@+id/create_float_label_note"
                android:textColorHint="@color/gray_text_very_light"
                android:textColor="@color/gray_text_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                floatlabel:fitScreenWidth="full"
                floatlabel:hint="@string/note"
                floatlabel:textSize="18sp"
                floatlabel:textColorHintFocused="@color/gray_text_light"
                floatlabel:textColorHintUnFocused="@color/gray_text_light"   />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>