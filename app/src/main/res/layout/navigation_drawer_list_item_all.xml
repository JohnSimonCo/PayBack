<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="@drawable/selector_navigation_drawer_list_item"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:background="@drawable/ic_ic_person_placeholder_outline"
            android:layout_width="44dp"
            android:layout_height="44dp" />

        <com.makeramen.RoundedImageView
            android:src="@drawable/ic_people_placeholder"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="18dip"
            app:riv_oval="true" />

    </RelativeLayout>

    <com.johnsimon.payback.util.RobotoMediumTextView
        android:text="@string/all"
        android:layout_gravity="center_vertical"
        android:textColor="@color/gray_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>