<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.johnsimon.payback.ui.PeopleManagerActivity">

    <include
        layout="@layout/toolbar"    />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mobeta.android.dslv.DragSortListView
            android:id="@+id/people_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="0dp"
            android:paddingLeft="@dimen/feed_list_item_extra_margin"
            android:paddingRight="@dimen/feed_list_item_extra_margin"
            dslv:float_background_color="@android:color/transparent"
            dslv:collapsed_height="0dp"
            dslv:drag_enabled="true"
            dslv:drag_scroll_start="0.33"
            dslv:drag_start_mode="onMove"
            dslv:float_alpha="0.6"
            dslv:max_drag_scroll_speed="0.5"
            dslv:remove_enabled="true"
            dslv:remove_mode="flingRemove"
            dslv:slide_shuffle_speed="0.3"
            dslv:sort_enabled="true"
            dslv:track_drag_sort="false"
            dslv:use_default_controller="true" />

        <TextView
            android:id="@+id/people_manager_empty"
            android:text="@string/people_empty_text"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</LinearLayout>
