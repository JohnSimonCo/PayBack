<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/welcome_header"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:src="@drawable/art"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_alignParentBottom="true"
                android:src="@drawable/feed_image_gradient"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <com.devspark.robototextview.widget.RobotoTextView
                app:fontFamily="roboto"
                app:textWeight="medium"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="16dp"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:layout_alignParentBottom="true"
                android:text="@string/welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:id="@+id/welcome_information_text"
            android:paddingBottom="8dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="16dp"
            android:textColor="@color/gray_text_light"
            android:textSize="18sp"
            android:text="@string/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.devspark.robototextview.widget.RobotoButton
            app:fontFamily="roboto"
            app:textWeight="medium"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="end"
            android:textAllCaps="true"
            android:text="@string/welcome_continue"
            android:id="@+id/welcome_continue"
            android:layout_width="94dp"
            android:layout_height="42dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/green_strong"
            android:clickable="false"
            android:textSize="16sp"/>

    </LinearLayout>
</ScrollView>