<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

        <TextView
            android:textSize="26sp"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/gray_text_very_light"
            android:textSize="26sp"
            android:paddingLeft="8dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/about_dialog_version"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <View
        android:background="@color/gray_oncolor_very_light"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/library_title"
                android:text="@string/lib_devdesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_johnsimon"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_riv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_riv"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_fab"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_gson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_gson"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_uil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_uil"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_dslv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_dslv"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_qr"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/library_title"
                android:text="@string/lib_snb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.johnsimon.payback.util.RobotoMediumTextView
                android:text="@string/author_snb"
                style="@style/library_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>