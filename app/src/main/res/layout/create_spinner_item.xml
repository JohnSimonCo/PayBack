<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/create_spinner_master"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.devspark.robototextview.widget.RobotoTextView
        app:fontFamily="roboto"
        app:textWeight="medium"
        android:text="Afternoon"
        android:textColor="@color/gray_text_light"
        android:textSize="16sp"
        android:id="@+id/create_spinner_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <com.devspark.robototextview.widget.RobotoTextView
        app:fontFamily="roboto"
        app:textWeight="medium"
        android:text="13:00"
        android:textColor="@color/gray_text_very_light"
        android:textSize="13sp"
        android:id="@+id/create_spinner_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>