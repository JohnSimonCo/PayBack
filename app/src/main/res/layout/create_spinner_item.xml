<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:id="@+id/create_spinner_master"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.devspark.robototextview.widget.RobotoTextView
        app:fontFamily="roboto"
        app:textWeight="medium"
        android:textColor="@color/gray_text_light"
        android:textSize="14sp"
        android:id="@+id/create_spinner_text"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingLeft="12dp"
        android:textColor="@color/gray_text_very_light"
        android:textSize="12sp"
        android:id="@+id/create_spinner_secondary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>