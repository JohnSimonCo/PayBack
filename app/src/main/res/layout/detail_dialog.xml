<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.johnsimon.payback.RobotoMediumTextView
            android:text="Title"
            android:id="@+id/dialog_custom_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#474747"
            android:textSize="22sp"
            android:padding="8dp"/>

        <ImageButton
            android:id="@+id/detail_dialog_overflow"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_more_vert"    />

    </LinearLayout>


    <com.johnsimon.payback.RobotoMediumTextView
        android:text="Content"
        android:id="@+id/dialog_custom_content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="#999999"
        android:textSize="18sp"
        android:padding="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:paddingTop="8dp"
        android:orientation="horizontal">

        <Button
            android:textAllCaps="true"
            android:text="@string/send"
            android:id="@+id/dialog_custom_cancel"
            android:layout_width="88dp"
            android:layout_height="36dp"
            android:background="?android:attr/selectableItemBackground"
            android:textSize="14sp"
            android:textColor="#212121"/>

        <Button
            android:textAllCaps="true"
            android:text="@string/pay_back"
            android:id="@+id/dialog_custom_confirm"
            android:layout_width="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_height="36dp"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/green"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>