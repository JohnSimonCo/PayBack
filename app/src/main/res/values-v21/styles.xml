<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_darker</item>

        <item name="android:colorAccent">@color/accent_color</item>
    </style>

    <style name="RippleBackground">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SpinnerNormal" parent="@android:style/Widget.Material.Light.Spinner"   />

    <style name="Elevation4DP">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Elevation2DP">
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Snackbar.Text.Action">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/sb__action_text_color</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

</resources>