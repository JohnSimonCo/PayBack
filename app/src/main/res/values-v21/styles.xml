<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppThemeParent">
        <item name="android:colorPrimary">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color_darker</item>

        <item name="android:colorAccent">@color/accent_color</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="RippleBackground">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SpinnerNormal" parent="@android:style/Widget.Material.Light.Spinner"   />

    <style name="Elevation4DP">
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Elevation2DP">
        <item name="android:elevation">2dp</item>
    </style>

    <style name="FlatButton">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/md_btn_selector_ripple</item>
        <item name="android:minWidth">@dimen/md_button_min_width</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_color</item>
    </style>

</resources>