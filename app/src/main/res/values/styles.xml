<resources>

    <style name="AppTheme" parent="Theme.Red">

    </style>

    <style name="AppTheme_NoActionBarBorder" parent="AppTheme">

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:editTextBackground">@drawable/whiteedittext_edit_text_holo_light</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/whiteradio_btn_radio_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="android:actionBarStyle">@style/Widget_NoBorderActionBar_ActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/invisble_actionbar_up</item>

    </style>

    <style name="Widget_NoBorderActionBar_ActionBar" parent="@style/ActionBar.Solid.Red">
        <item name="android:background">@color/accent_color</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_moreoverflow_pressed</item>
    </style>

    <style name="overflow_text_style">
        <item name="android:textColor">@color/gray_text_normal</item>
    </style>

    <style name="black_text">
        <item name="android:textColor">@color/gray_text_normal</item>
    </style>

    <style name="paid_back_anim" >
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/paid_back_dialog_out</item>
    </style>

    <style name="we_are_even_anim" >
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/paid_back_dialog_out</item>
    </style>

    <style name="library_title">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/gray_text_normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="library_author">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_oncolor_light</item>
    </style>

    <style name="navigation_drawer_footer">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@drawable/selector_navigation_drawer_footer_item</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/gray_text_normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="AppTheme_MainScreen" parent="@style/AppTheme">
        <item name="android:editTextBackground">@drawable/apptheme_greenedittext_edit_text_holo_light</item>
    </style>

    <style name="EditTextAppTheme_GreenEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_greenedittext_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RadioButtonred_radiobutton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/red_radiobutton_btn_radio_holo_light</item>
    </style>

</resources>
