<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingActionButton">
        <attr name="fab_drawable" format="integer"/>
        <attr name="fab_color" format="color"/>
        <attr name="fab_shadowRadius" format="float"/>
        <attr name="fab_shadowDx" format="float"/>
        <attr name="fab_shadowDy" format="float"/>
        <attr name="fab_shadowColor" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FloatLabelEditText">
        <attr name="fitScreenWidth" format="enum">
            <enum name="full" value="1"/>
            <enum name="half" value="2"/>
        </attr>
        <attr name="gravity" format="enum">
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
            <enum name="center" value="17"/>
        </attr>
        <attr name="hint" format="string"/>
        <attr name="inputType" format="enum">
            <enum name="normal" value="0"/>
            <enum name="textPassword" value="1"/>
        </attr>
        <attr name="text" format="string"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorHintFocused" format="color"/>
        <attr name="textColorHintUnFocused" format="color"/>
    </declare-styleable>



</resources>