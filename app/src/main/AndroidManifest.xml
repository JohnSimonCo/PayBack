<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnsimon.payback">

    <!--
        Used Libraries:

        RoundedAvatarDrawable by Evelio Tarazona CÃ¡ceres (http://evel.io/2013/07/21/rounded-avatars-in-android/)
        FloatingActionButton by Faiz Malkani (https://github.com/FaizMalkani/FloatingActionButton)
        SystemBarTint by Jeff Gilfelt (https://github.com/jgilfelt/SystemBarTint)
        L-Dialogs by Lewis Deane (https://github.com/lewisjdeane/L-Dialogs)
        AndroidFloatLabel by weddingparty (https://github.com/weddingparty/AndroidFloatLabel)
    -->

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FeedActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/vnd.com.example.android.beam"/>
            </intent-filter>

        </activity>
        <activity
            android:icon="@null"
            android:theme="@style/AppTheme_NoActionBarBorder"
            android:name=".SetupActivity" >
        </activity>
        <activity
            android:name=".CreateDebtActivity"
            android:icon="@drawable/ic_actionbar_left"
            android:label="@string/title_activity_create_debt"
            android:theme="@style/AppTheme_NoActionBarBorder" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/pref_settings"   />
    </application>

</manifest>
