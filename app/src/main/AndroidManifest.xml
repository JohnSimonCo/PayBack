<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnsimon.payback" >

    <!--
        Used Libraries:

        RoundedAvatarDrawable by Evelio Tarazona CÃ¡ceres (http://evel.io/2013/07/21/rounded-avatars-in-android/)
        FloatingActionButton by Faiz Malkani (https://github.com/FaizMalkani/FloatingActionButton)
        SystemBarTint by Jeff Gilfelt (https://github.com/jgilfelt/SystemBarTint)
        L-Dialogs by Lewis Deane (https://github.com/lewisjdeane/L-Dialogs)
        AndroidFloatLabel by weddingparty (https://github.com/weddingparty/AndroidFloatLabel)
    -->

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.NFC" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/AppThemeParent" >
        <activity
            android:name=".ui.FeedActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name"
            android:theme="@style/AppThemeParent" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/vnd.com.johnsimon.payback"/>
            </intent-filter>

        </activity>
        <activity
            android:name=".ui.CreateDebtActivity"
            android:icon="@drawable/ic_actionbar_left"
            android:label=""
            android:theme="@style/AppThemeParent" >
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.FeedActivity"
            android:theme="@style/AppThemeParent"
            android:label="@string/pref_settings" />
        <activity
            android:name=".ui.PeopleManagerActivity"
            android:parentActivityName=".ui.FeedActivity"
            android:theme="@style/AppThemeParent"
            android:label="@string/title_activity_people_manager"   />
    </application>

</manifest>
